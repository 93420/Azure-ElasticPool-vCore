{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "administratorLogin": {
            "type": "string",
            "metadata": {
                "description": "SQL Server administrator login."
            },
        "administratorLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "SQL Server administrator login password."
            },
        "serverName": {
            "type": "string",
            "metadata": {
                "description": "SQL Server name."
            },
        "location": {
            "defaultValue": "eastus",
			"allowedValues": [
                "eastus",
				"canadacentral",
                "canadaeast"
            ],
        },
        "elasticPoolName": {
            "type": "string",
            "metadata": {
                "description": "The Elastic Pool name."
        },
        "skuName": {
		"type": "string",
		"defaultValue": "GP_Gen4",
			"allowedValues": [
                "GP_Gen4",
                "GP_Gen5"
            ],
		"metadata": {
                "description": "The Elastic Pool sku."
            }
        },
        "tier": {
		"type": "string",
            	"defaultValue": "GeneralPurpose"
        },
        "poolLimit": {
            	"type": "int",
		"defaultValue": "8",
           	"metadata": {
                	"description": "The Elastic Pool vCore."
            	},
	},
        "poolSize": {
		"defaultValue": 16106127360,
		"type": "int",
            	"metadata": {
               		"description": "The Elastic Pool Size."
            	},
        },
        "perDatabasePerformanceMin": {
			"type": "int",
            "defaultValue": "0"
        },
        "perDatabasePerformanceMax": {
		"type": "int",
            "defaultValue": "4"
        },
        "zoneRedundant": {
            "defaultValue": false
        },
        "licenseType": {
            "type": "string",
            "defaultValue": "LicenseIncluded"
        },
        "allowAzureIps": {
            "defaultValue": true
        },
        "databasesNames": {
			"type": "array",
            "defaultValue": [
                "db01",
                "db02",
		"db03",
                "db04",
		"db05",
		"db06",
                "db07",
		"db08",
                "db09",
		"db10"
            ],
            "metadata": {
                "description": "Array of databases names."
            }
        },
        "databaseCollation": {
            "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
        }
    }
}
